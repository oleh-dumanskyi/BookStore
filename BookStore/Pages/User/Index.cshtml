@page
@model BookStore.Pages.User.IndexModel
@{
    var i = 0;
    <h2>Book store</h2><p></p>
    <p>Hello, @Model._context.Users.FirstOrDefault(u=>u.Email == HttpContext.User.Identity.Name).Name</p>
    <a href="/shoppingcart"><input type="button" value="Shopping Cart"></a>
    <p></p>
    <a href="~/logout"><input type="button" value="Log Out"></a>
    <br><p></p>
    <form method="post">
    <table style="border-style: solid">
        <tr><th>#</th><th>Название</th><th>Автор</th><th>Язык</th><th>Страницы</th><th>Жанр</th><th>Цена</th><th></th></tr>
        @foreach (var book in Model._context.Books)
        {
            i++;
            <tr><td>@book.Id</td><td>@book.Title</td><td>@book.Author</td><td>@book.Language</td><td>@book.Pages</td><td>@book.Genre</td><td>@book.Price</td><td><input id="@i" type="button" value="Add to cart"/></td></tr>
        }
    </table>
    </form>
}