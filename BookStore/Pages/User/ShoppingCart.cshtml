@page "{id:int?}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BookStore.Pages.User.ShoppingCartModel
@{
    <h2>Shooping Cart</h2>
    <p></p>
    <a href="/User/Index">
        <input type="button" value="Go Back">
    </a>
    <br><br>
    @if (Model.Books.Count == 0)
    {
        <h2>Cart is empty</h2>
    }
    else
    {
        <table style="border-collapse: collapse; border-color: lightgrey; border-style: solid;">
            <tr>
                <th>Title</th><th>Author</th><th>Language</th><th>Pages</th><th>Genre</th><th>Price</th><th></th>
            </tr>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td><td>@book.Author</td><td>@book.Language</td><td>@book.Pages</td><td>@book.Genre</td><td>@book.Price</td>
                    <td>
                        <form method="post">
                            <button type="submit" asp-page-handler="delete" asp-route-id="@book.Id">Remove from cart</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    }
    }
